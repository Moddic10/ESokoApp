<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grocery Store"
        android:textSize="24sp"
        android:gravity="center"
        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appleImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Apples"
            android:src="@drawable/apples"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/appleTextView"
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:text="Apple\nKSh 10"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/appleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Add to Cart"
            android:textSize="20sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/orangeImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Oranges"
            android:src="@drawable/oranges"
            tools:ignore="HardcodedText,ImageContrastCheck" />

        <TextView
            android:id="@+id/orangeTextView"
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:text="Orange\nKSh 12"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/orangeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Add to Cart"
            android:textSize="20sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bananaImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Bananas"
            android:src="@drawable/bananas"
            tools:ignore="HardcodedText,ImageContrastCheck" />

        <TextView
            android:id="@+id/bananaTextView"
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:text="Banana\nKSh 10"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/bananaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Add to Cart"
            android:textSize="20sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tomatoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Tomatoes"
            android:src="@drawable/tomatoes"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tomatoTextView"
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:text="Tomato\nKSh 5"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/tomatoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Add to Cart"
            android:textSize="20sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="108dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vegetableImageView"
            android:layout_width="93dp"
            android:layout_height="107dp"
            android:contentDescription="Vegetables"
            android:src="@drawable/vegetables"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/vegetableTextView"
            android:layout_width="94dp"
            android:layout_height="81dp"
            android:text="Vegetable\nKSh 15"
            android:textSize="16sp"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <Button
            android:id="@+id/vegetableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Add to Cart"
            android:textSize="20sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="339dp"
        android:layout_height="70dp"
        android:text="Total: KSh 0"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cartButton"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:minHeight="48dp"
        android:text="View Cart"
        android:textSize="16sp"
        tools:ignore="HardcodedText,TouchTargetSizeCheck,VisualLintBounds" />


</LinearLayout>


